// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // database SQLite
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  duration    Int      // menit
  createdAt   DateTime @default(now())
}